CC = gcc
CFLAGS = -Wall -Wextra -Werror
CFILES = push_swap.c
OBJS = ${CFILES:.c=.o}

NAME = push_swap

RM = rm -rf
################################################################################
.PHONY: all re fclean clean
################################################################################
all:		${NAME}

test:		all
		./${NAME} 1 2 3 4 5

${NAME}:	${OBJS}
		@${CC} ${OBJS} -o ${NAME}

%.o:		%.c
		@${CC} -c ${CFLAGS} $< -o $@

re:			fclean all

fclean:		clean
		@${RM} ${NAME}

clean:
		@${RM} ${OBJS}
################################################################################
